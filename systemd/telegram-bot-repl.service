[Unit]
Description=Telegram Bot for REPL
After=syslog.target
After=network.target

[Service]
Type=simple
User=some_user
Group=some_user
WorkingDirectory=/path/to/telegram-bot-repl
ExecStart=/path/to/telegram-bot-repl/telegram-bot-repl
Restart=always
RestartSec=5
Environment=

[Install]
WantedBy=multi-user.target
